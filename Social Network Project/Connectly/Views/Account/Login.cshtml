@model Connectly.Models.AccountViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="lg:flex">
    <div class="w-1/3 mx-auto hidden lg:block" style="margin-top: 10%">
        <p class="mb-4 text-5xl" style="color: #4b4276">Connectly</p>
        <p class="text-xl">Maintain close relationships and stay in touch with loved ones, regardless of the distance.</p>
    </div>
    <div class="w-full lg:w-1/2 xl:w-2/5 md:mx-auto" style="margin-top: 8%">
        <p class="mb-12 text-5xl text-center lg:hidden" style="color: #4b4276">Connectly</p>
        <div class="bg-white shadow rounded-lg p-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" style="font-size:15px"></div>
                <div class="mb-3">
                    <span asp-validation-for="Username" class="text-danger" style="font-size:12px;"></span>
                    <input type="text" class="form-control " asp-for="Username" placeholder="Username" />
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Password" class="text-danger" style="font-size:12px;"></span>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                </div>
                <div class="mb-4">
                    <button class="btn btn-lg btn-primary" style="width: 100%" type="submit">Login</button>
                </div>
            </form>
            <form>
                <hr style="margin-bottom: 5%" />
                <div class="text-center mb-3">
                    <button asp-controller="Account" asp-action="Register" class="btn btn-lg text-white" style="background-color: limegreen">Create an account</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}