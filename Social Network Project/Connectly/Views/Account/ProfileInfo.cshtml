@model Connectly.Models.AccountViewModels.UserProfileViewModel;

<div class="row">
    <div class="col-6">
        <div style="margin-top: 75px; position: fixed; width: 700px;">
            <div class="card" style="height: 500px">
                <div class="card-body">
                    @if (Model.Image is not null)
                    {
                        <img src="@Model.Image" height="50" width="50" style="border-radius: 30px">
                    }
                    else
                    {
                        <img src="https://cdn.pixabay.com/photo/2018/11/13/21/43/avatar-3814049_1280.png" height="150" width="150" style="border-radius: 100px">
                    }
                    <div style="margin-left: 160px; margin-top: -100px">
                        <h4 style="">@Model.FirstName  @Model.LastName</h4>
                        <p class="text-secondary" style="">@Model.AccountPrivacy</p>
                        @if (Model.IsFriendWithCurrentUser == "No")
                        {
                            <form method="post">
                                <a asp-controller="Friendships" asp-action="SendFriendship" asp-route-id="@Model.Id">
                                    <i class="fa-solid fa-user-plus" style="float: right; font-size: 25px; margin-right: 20px; margin-top: -70px"></i>
                                </a>
                            </form>
                        }
                        @if (Model.IsFriendWithCurrentUser == "Yes")
                        {
                            <i class="fa-solid fa-user-check" style="float: right; font-size: 25px; margin-right: 20px; margin-top: -70px; color: #0d6efd"></i>
                        }
                        @if (Model.IsFriendWithCurrentUser == "Sent")
                        {
                            <p style="float: right; font-size: 20px; margin-right: 20px; margin-top: -70px; color: #0d6efd">Friend request sent</p>
                        }
                        @if (Model.IsFriendWithCurrentUser == "Received")
                        {
                            <div style="margin-right: 20px; margin-top: -70px;">
                                <p style="float: right; font-size: 17px;">@Model.FirstName sent you a friend request</p>
                                <br />
                            </div>
                            <form method="post">
                                <a asp-controller="Friendships" asp-action="DeclineRequest" asp-route-id="@Model.Id" style="float: right; margin-left: 10px">
                                    <i class="fa-solid fa-x"></i>
                                </a>
                                <a asp-controller="Friendships" asp-action="AcceptRequest" asp-route-id="@Model.Id" style="float: right; margin-left: 100px">
                                    <i class="fa-solid fa-check"></i>
                                </a>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-1"></div>
    <div class="col-4">
        <div style="margin-top: 75px">
            <div class="card">
                <div class="card-body">
                </div>
            </div>
        </div>
    </div>
</div>